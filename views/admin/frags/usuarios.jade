md-card
    md-subheader Usuarios
    md-card-content
        md-table-container
            table(md-table md-row-select multiple)
                thead(md-head)
                    tr(md-row)
                        th(md-column md-numeric) Nombre
                        th(md-column md-numeric) Correo
                        th(md-column md-numeric)
                        
                tbody(md-body)
                    tr(md-row md-select="dato" md-select-id="name" md-auto-select ng-repeat="usuario in usuarios")
                        td(md-cell) {{usuario.nombre}}
                        td(md-cell) {{usuario.correo}}
                        td(md-cell)
                            md-button(ui-sref="usuario({id: usuario.id})")
                                md-icon edit
        md-table-pagination(md-page-select)
